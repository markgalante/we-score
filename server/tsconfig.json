{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/src/",
    "strict": true,
    "target": "ES2020",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": ["./src/**/*"], 
  "exclude": ["node_modules"]
}